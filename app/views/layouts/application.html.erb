<!DOCTYPE html>
<html>
  <head>
    <title>Bkp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
	<%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
	  <a class="navbar-brand" href="#">bkp</a>
	  <div class="collapse navbar-collapse">
		<ul class="navbar-nav mr-auto">
		  <% if current_user.nil? %>
		  <li class="nav-item">
			<%= link_to 'login', new_user_session_path, method: :get, class: "badge badge-light" %>
		  </li>
		  <% else %>
		  <li class="nav-item">
			<%= link_to 'logout', destroy_user_session_path, method: :delete, class: "badge badge-light" %>
		  </li>
		  <li class="nav-item">
			<a href="/" class="badge badge-light"><%= current_user.name %></a>
		  </li>
		  <% end %>
		</ul>
	  </div>
	</nav>
    <%= yield %>
  </body>
</html>
